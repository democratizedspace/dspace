---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Header from '../components/Header.astro';

const { hideHome, hideSettings, hideQuests, title, message } = Astro.props;
const hideAll = hideHome && hideSettings && hideQuests;
---

<Layout title="DSPACE">
	<main>
		<Header title="" body="" href="" />
		<h2>{title}</h2>
		
		{
			!(hideAll) &&
				<ul role="list" class="link-card-grid">
					{!(hideHome) &&
						<Card
							href="/"
							title="Back to home"
							body="Go to the main menu."
							textbox={false}
							disabled={false}
							hazard={false}
						/>}
					{!(hideSettings) && 
						<Card
							href="/settings"
							title="Settings"
							body="Personalize your experience."
							textbox={false}
							disabled={false}
							hazard={false}
						/>}
					{!(hideQuests) && 
						<Card
							href="/quests"
							title="Quests"
							body="Explore the quests available to you."
							textbox={false}
							disabled={false}
							hazard={false}
						/>}
				</ul>
		}
		{
			!(hideAll) && 
				<br /> <br />
		}
		<h2>
			{message}
		</h2>
		<ul role="list" class="link-card-grid">
			<slot />
		</ul>
	</main>
</Layout>

<style>
	:root {
		--astro-gradient: linear-gradient(0deg, #2c5837, #00ff22);
	}

	h1 {
		margin: 2rem 0;
	}

	main {
		margin: auto;
		padding: 1em;
		max-width: 60ch;
	}

	.text-gradient {
		font-weight: 900;
		background-image: var(--astro-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 100% 200%;
		background-position-y: 100%;
		border-radius: 0.4rem;
		animation: pulse 4s ease-in-out infinite;
	}

	@keyframes pulse {
		0%,
		100% {
			background-position-y: 0%;
		}
		50% {
			background-position-y: 25%;
		}
	}

	.instructions {
		line-height: 1.6;
		margin: 1rem 0;
		background: #003a03;
		padding: 1rem;
		border-radius: 0.4rem;
		color: #00ff22;
	}

	.instructions code {
		font-size: 0.875em;
		border: 0.1em solid var(--color-border);
		border-radius: 4px;
		padding: 0.15em 0.25em;
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}
	
	.main-grid {
		list-style-type: none;
	}
</style>