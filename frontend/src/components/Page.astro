---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Header from '../components/Header.astro';

const { hideHome, hideSettings, hideQuests, title, message, columns } = Astro.props;
const hideAll = hideHome && hideSettings && hideQuests;

let columnNumber = 2;
if (columns) {
	columnNumber = parseInt(columns);
}

// TODO: Add breadcrumbs to the top of the page
---

<Layout title="DSPACE">
	<main>
		<Header title="" body="" href="" />
		
		<nav>
			<a href="/">Home</a>
			<a href="/docs">Docs</a>
			<a href="/quests">Quests</a>
			<a href="/inventory">Inventory</a>
			<a href="/wallet">Wallet</a>
			<a href="/guilds">Guilds</a>
			<a href="https://discord.gg/A3UAfYvnxM" target="_blank">Discord</a>
			<a href="/shop">Shop</a>
			<a href="/skills">Skills</a>
			<a href="/profile">Profile</a>
			<a href="/stats">Stats</a>
			<a href="/achievements">Achievements</a>
			<a href="/leaderboard">Leaderboard</a>
			<a href="/settings">Settings</a>
			<a href="/changelog">Changelog</a>
		</nav>

		<h2>{title}</h2>

		{
			!(hideAll) &&
				<ul role="list" class="link-card-grid">
				</ul>
		}
		{
			!(hideAll) && 
				<span />
		}
		<h2>
			{message}
		</h2>
		{ (columnNumber == 1) ?
			<ul role="list" class="link-card-grid-1">
				<slot />
			</ul>
			:
			<ul role="list" class="link-card-grid-2">
				<slot />
			</ul>
		}
	</main>
</Layout>

<style>
	:root {
		--astro-gradient: linear-gradient(0deg, #2c5837, #00ff22);
		--link-gradient: linear-gradient(45deg, #003a03, #003a03 30%, var(--color-border) 60%);
	}

	main {
		margin: auto;
		padding: 1em;
		max-width: 60ch;
	}

	.text-gradient {
		font-weight: 900;
		background-image: var(--astro-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 100% 200%;
		background-position-y: 100%;
		border-radius: 0.4rem;
		animation: pulse 4s ease-in-out infinite;
	}

	@keyframes pulse {
		0%,
		100% {
			background-position-y: 0%;
		}
		50% {
			background-position-y: 25%;
		}
	}

	.instructions {
		line-height: 1.6;
		margin: 1rem 0;
		background: #003a03;
		padding: 1rem;
		border-radius: 0.4rem;
		color: #00ff22;
	}

	.instructions code {
		font-size: 0.875em;
		border: 0.1em solid var(--color-border);
		border-radius: 4px;
		padding: 0.15em 0.25em;
	}

	.link-card-grid-1 {
		display: grid;
		gap: 1rem;
		padding: 0;
		grid-template-columns: 1fr;
	}
	
	.link-card-grid-2 {
		display: grid;
		gap: 1rem;
		padding: 0;
		grid-template-columns: 1fr 1fr;
	}

	@media only screen and (max-width: 768px) {
		.link-card-grid-2 {
		grid-template-columns: 1fr;
		margin: auto;
		}
	}
	
	@media only screen and (max-width: 768px) {
		.link-card-grid-2 {
		grid-template-columns: 1fr;
		margin: auto;
		}
	}
	
	.main-grid {
		list-style-type: none;
	}

	/* Navbar */
	h2 {
		color: white;
	}

	nav {
		text-align: center;
		display: inline-flex;
		flex-wrap: wrap;
		justify-content: center;
	}

	nav a {
		opacity: 0.8;
		background-color: hsl(123, 100%, 22%);
		border-radius: 0.4rem;
		color: white;
		text-decoration: none;
		flex-direction: row;
		margin: 1px;
		padding: 5px;
		text-align: center;
	}

	nav a:hover {
		opacity: 1;
	}
</style>
