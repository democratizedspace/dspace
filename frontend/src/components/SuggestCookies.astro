---
import { hasAcceptedCookies } from '../utils';
export interface Props {
    shouldSuggestCookies: boolean;
    redirect: string;
}

const { shouldSuggestCookies, redirect } = Astro.props as Props;

---

<p>
{shouldSuggestCookies &&
    <span>To save your progress, you must <a href={`/accept_cookies?redirect=${redirect}`}>accept cookies</a>.</span>
}

{(shouldSuggestCookies && redirect !== undefined) &&
    <span>You'll get a <a href={redirect}>link</a> to return to this page after accepting.</span>
}
</p><br />

<style>
    a {
        opacity: 0.8;
		background-color: #84d484;
		border-radius: 100px;
		color: black;
		text-decoration: none;
		flex-direction: row;
		padding-left: 5px;
		padding-right: 5px;
        text-align: center;
        white-space: nowrap;
    }

    a:hover {
        opacity: 1;
    }

    span {
        color: white;
    }
</style>