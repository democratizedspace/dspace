---
import Page from '../components/Page.astro';
import Card from '../components/Card.astro';
import { parseBool, getCookieValue } from '../utils';

const cookie = Astro.request.headers.get('cookie');
const acceptedCookies = parseBool(getCookieValue(cookie, 'acceptedCookies'));
---

<Page hideHome={true} hideSettings={true} hideQuests={true} message="This site currently uses cookies to save progress.">
    <Card
        href="/accepted_cookies"
        title="Accept cookies"
        body=""
    />

    <Card
        href="/"
        title="Maybe later."
        body="Go back home."
    />
</Page>
