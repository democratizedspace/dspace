---
import Page from '../components/Page.astro';
import Card from '../components/Card.astro';
import { parseBool, getCookieValue } from '../utils';

let acceptUrl = '/accepted_cookies';
let denyUrl = '/';

const redirect = Astro.url.searchParams.get('redirect');

if (redirect !== undefined) {
  acceptUrl = `/accepted_cookies?redirect=${redirect}`;
  denyUrl = redirect;
}
---

<Page hideHome={true} hideSettings={true} hideQuests={true} message="This site currently uses cookies to save progress.">
    <Card
        href={acceptUrl}
        title="Accept cookies"
        body=""
    />

    <Card
        href={denyUrl}
        title="Maybe later."
    />
</Page>
