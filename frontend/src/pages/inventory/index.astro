---
import Page from '../../components/Page.astro';
import Card from '../../components/Card.astro';
import Warning from '../../components/Warning.astro';

// import items.json from the config directory
import items from './json/items.json';
---

<Page title="Inventory" columns="1">
    <Warning title="Warning" text="Until the inventory, profile, and leaderboard systems are implemented, expect item counts to reset. This is because right now inventory management is fully client-side and can be abused to progress your account without cooldowns. Once there are sufficient server-side checks to ensure fairness, your inventory will only be changed with your explicit consent." />
    {items.map((item) => (
        <a href={`/inventory/${item.id}`}>
            <div class="item">
                <h3>{item.name}</h3>
                <div>
                    <img src={item.image} />
                    <p>{item.description}</p>
                </div>
            </div>
        </a>
    ))}
</Page>

<style>
    .item {
        background-color: #2f5b2f;
        padding: 20px;
        padding-top: 10px;
        min-height: 100px;
        border-radius: 20px;
        opacity: 0.8;
    }

    .item:hover {
        opacity: 1;
    }

    .item h3 {
        margin: 0px;
        margin-bottom: 20px;
    }

    img {
        width: 50px;
        float: left;
        margin-right: 20px;
        border-radius: 20px;
    }

    a {
        text-decoration: none;
        color: white;
    }
</style>