---
import Page from '../../../components/Page.astro';
import QuestChatWrapper from '../svelte/QuestChatWrapper.svelte';

let quests;
let quest;

const { pathId, questId } = Astro.params;

quests = await Astro.glob('../json/*/*.json');

for (const q of quests) {
    const id = q.default.id;
    const parentQuestId = `${pathId}/${questId}`;
    quest = q.default;
}
---

<Page>
    <QuestChatWrapper quest={quest} client:load />
</Page>