---
import Page from '../../components/Page.astro';
import Chip from '../../components/Chip.astro';
import items from '../inventory/json/items.json';
---

<Page columns="1">
    <div class="vertical list">
        <div class="horizontal list">
            <p>Wall outlet</p>
            <img src="/assets/outlet.jpg" />
            <p>Energy source: Coal</p>
        </div>
        <p><Chip text="Buy dWatt" href="/shop/buy/22" />, the consumable energy token</p> 
    </div>
</Page>

<style>
    img {
        width: 50px;
        height: 50px;
        margin: 10px;
        border-radius: 20px;
    }

    .list {
        display: flex;
        gap: 10px;
    }

    .vertical {
        flex-direction: column;
    }

    .horizontal {
        flex-direction: row;
    }
</style>